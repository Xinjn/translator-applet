/**index.wxss**/
@import "../../assets/iconfont/iconfont.wxss";
.container{

  background:#22374B;
}
.change {
  color: #8995a1;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;

}
.change .icon-right {
  color: #888;
}
.change .icon-down {
  color: #8995a1;
  font-size: 20rpx;
}

.input-area {
  position: relative;

}
.textarea-wrap {
  background: #3C5060;
  border-bottom: 5px solid #22374b;
}
.input-area textarea {
  background-color: #3C5060;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
  color: #B2C3CD;
}
.input-area .icon-close {
  position: absolute;
  right: 12rpx;
  top: 20rpx;
  z-index: 100;
  font-size: 40rpx;
  color: #888;
}

.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #3C5060;

  color: #8995a1;
}

.input-area .text-title {
  font-size: 28rpx;
  color: #8995a1;
  
}

.input-area .text-result {

  padding: 20rpx 0;
}
.copyright{
  color: #8995a1;
}

